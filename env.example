# ðŸš€ IRIS MCP SDK Environmental Consulting Demonstration
# Configuration file for the IRIS MCP SDK showcase platform

# ===== IRIS MCP SDK CORE CONFIGURATION =====
# Primary IRIS MCP SDK API integration
IRIS_MCP_API_KEY=your_iris_mcp_api_key_here
IRIS_MCP_ENDPOINT=https://api.iris-mcp.com/v1
IRIS_MCP_VERSION=2.0
IRIS_MCP_DEMO_MODE=true

# IRIS MCP SDK Feature Flags
IRIS_COMPUTER_USE_ENABLED=true
IRIS_MULTI_MODAL_AI_ENABLED=true
IRIS_AGENT_ORCHESTRATION_ENABLED=true
IRIS_REAL_TIME_ANALYTICS_ENABLED=true

# ===== DEMONSTRATION PLATFORM SETTINGS =====
# Application configuration for the showcase
NEXT_PUBLIC_APP_NAME="IRIS MCP SDK Environmental Demo"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_DEMO_MODE=true
NEXT_PUBLIC_SHOWCASE_VERSION=2.0

# Demonstration-specific features
NEXT_PUBLIC_SHOW_PERFORMANCE_METRICS=true
NEXT_PUBLIC_ENABLE_AGENT_MONITORING=true
NEXT_PUBLIC_DISPLAY_SDK_FEATURES=true

# ===== AI INTEGRATION (Enhanced Features) =====
# OpenAI integration for enhanced demonstration features
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# Additional AI service integrations (optional)
ANTHROPIC_API_KEY=your_anthropic_key_here
GOOGLE_AI_API_KEY=your_google_ai_key_here

# ===== COMPUTER USE AGENT CONFIGURATION =====
# Computer use agent settings for demonstrations
COMPUTER_USE_PERMISSIONS=screen_capture,file_system,browser_automation
COMPUTER_USE_SECURITY_LEVEL=sandbox
COMPUTER_USE_AUDIT_ENABLED=true

# Screen orchestration settings
SCREEN_CAPTURE_RESOLUTION=1920x1080
SCREEN_ANALYSIS_CONFIDENCE_THRESHOLD=0.8
SCREEN_INTERACTION_DELAY=100

# ===== MULTI-MODAL AI SETTINGS =====
# Voice processing configuration
VOICE_RECOGNITION_ENABLED=true
VOICE_LANGUAGE=en-US
VOICE_CONFIDENCE_THRESHOLD=0.7

# Visual intelligence settings
VISUAL_ANALYSIS_ENABLED=true
IMAGE_PROCESSING_MAX_SIZE=10MB
COMPUTER_VISION_MODEL=iris-vision-v2

# ===== AGENT ORCHESTRATION =====
# Multi-agent coordination settings
AGENT_REGISTRY_ENABLED=true
WORKFLOW_ORCHESTRATION_ENABLED=true
REAL_TIME_MONITORING_ENABLED=true
AGENT_PERFORMANCE_TRACKING=true

# Agent discovery and coordination
MAX_CONCURRENT_AGENTS=50
AGENT_HEARTBEAT_INTERVAL=5000
WORKFLOW_TIMEOUT=300000

# ===== EXTERNAL INTEGRATIONS =====
# GIS and mapping services for environmental features
MAPBOX_API_KEY=your_mapbox_key_for_gis_features
GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# Cloud storage for file processing demonstrations
AWS_ACCESS_KEY_ID=your_aws_key_for_file_storage
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1
AWS_S3_BUCKET=iris-mcp-demo-storage

# Azure integration (optional)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_CONTAINER_NAME=iris-mcp-files

# ===== DATABASE CONFIGURATION =====
# Database for demonstration data persistence
DATABASE_URL=your_database_url_here
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# Redis for real-time features (optional)
REDIS_URL=your_redis_url_here
REDIS_PASSWORD=your_redis_password

# ===== MONITORING & ANALYTICS =====
# Performance monitoring and analytics
ANALYTICS_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true
ERROR_TRACKING_ENABLED=true

# External monitoring services
SENTRY_DSN=your_sentry_dsn_here
MIXPANEL_TOKEN=your_mixpanel_token_here
AMPLITUDE_API_KEY=your_amplitude_key_here

# ===== SECURITY & COMPLIANCE =====
# Security settings for enterprise demonstrations
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
AUDIT_LOG_ENABLED=true

# CORS settings for development
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000

# ===== DEPLOYMENT CONFIGURATION =====
# Vercel deployment settings
VERCEL_URL=your-iris-mcp-demo.vercel.app
VERCEL_ENV=development

# Production environment variables
NODE_ENV=development
PORT=3000
HOSTNAME=localhost

# ===== DEVELOPMENT TOOLS =====
# Development and debugging settings
DEBUG_MODE=true
VERBOSE_LOGGING=true
HOT_RELOAD_ENABLED=true

# API debugging
API_DEBUG_ENABLED=true
AGENT_DEBUG_ENABLED=true
PERFORMANCE_DEBUG_ENABLED=true

# ===== FEATURE DEMONSTRATIONS =====
# Specific demonstration features
DEMO_FIELD_DATA_CAPTURE=true
DEMO_AUTOMATED_REPORTING=true
DEMO_CLIENT_PORTAL=true
DEMO_CONTRACT_MANAGEMENT=true
DEMO_VISUAL_INTELLIGENCE=true

# Environmental consulting specific features
ENV_CONSULTING_MODE=true
EPA_INTEGRATION_DEMO=true
GIS_ANALYSIS_DEMO=true
COMPLIANCE_TRACKING_DEMO=true

# ===== EXPERIMENTAL FEATURES =====
# Beta features for advanced demonstrations
EXPERIMENTAL_FEATURES_ENABLED=false
BETA_AGENT_COLLABORATION=false
ADVANCED_COMPUTER_USE=false
PREDICTIVE_ANALYTICS_BETA=false